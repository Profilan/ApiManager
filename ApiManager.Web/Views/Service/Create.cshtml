@model ApiManager.Web.Models.ServiceViewModel

@{
    ViewBag.Title = "Create Service";

    IEnumerable<ApiManager.Logic.Models.PasswordHashing> hashings = ViewBag.Hashings;

    var hashingList = new SelectList(hashings, "Id", "Code");
}

<div class="row">
    <div class="col-lg-12">

        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">Create Service</h3>
                </div>
            </div>

            <!--begin::Form-->
            @using (Html.BeginForm("Edit", "Service", FormMethod.Post, new { @class = "kt-form kt-form--label-right", @id = "kt_service_form" }))
            {

                <div class="kt-portlet__body">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            @Html.LabelFor(model => model.Code)
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-lg-6">
                            @Html.LabelFor(model => model.HashingId)
                            @Html.DropDownListFor(model => model.HashingId, hashingList, "- Select a hashing -", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            @Html.LabelFor(model => model.ExternalUrl)
                            @Html.EditorFor(model => model.ExternalUrl, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary" data-ktwizard-action="action-submit">Save</button>
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dist/assets/js/pages/components/forms/layouts/repeater.js" type="text/javascript"></script>
    <script src="~/dist/assets/js/pages/custom/services/add.js" type="text/javascript"></script>
    <script type="text/javascript">



    </script>
}
