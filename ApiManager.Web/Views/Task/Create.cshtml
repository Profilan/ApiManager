@model ApiManager.Web.Models.TaskViewModel

@{
    ViewBag.Title = "Create Task";

}

<div class="row">
    <div class="col-lg-12">

        <!--begin::Portlet-->
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">Create Task</h3>
                </div>
            </div>

            <!--begin::Form-->
            @using (Html.BeginForm("Create", "Task", FormMethod.Post, new { @class = "kt-form kt-form--label-right", @id = "kt_task_form" }))
            {
                @Html.HiddenFor(model => model.Id)

                <div class="kt-portlet__body">

                    <div class="form-group row" >
                        <div class="col-lg-12">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control form-control-lg", @placeholder = "Title" } })
                        </div>
                    </div>

                    <ul class="nav nav-tabs nav-tabs-line nav-tabs-line-success nav-tabs-bold" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#general" role="tab">General</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#api" role="tab" id="apiTab">API</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#disk" role="tab" id="diskTab">File</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#mail" role="tab" id="mailTab">Mail</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#ftp" role="tab" id="ftpTab">FTP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#authentication" id="authenticationTab" role="tab">Authentication</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="general" role="tabpanel">
                            @{Html.RenderPartial("_General", Model); }
                        </div>
                        <div class="tab-pane" id="api" role="tabpanel">
                            @{Html.RenderPartial("_API", Model); }
                        </div>
                        <div class="tab-pane" id="disk" role="tabpanel">
                            @{Html.RenderPartial("_File", Model); }
                        </div>
                        <div class="tab-pane" id="mail" role="tabpanel">
                            @{Html.RenderPartial("_Mail", Model); }
                        </div>
                        <div class="tab-pane" id="ftp" role="tabpanel">
                            @{Html.RenderPartial("_FTP", Model); }
                        </div>
                        <div class="tab-pane" id="authentication" role="tabpanel">
                            @{Html.RenderPartial("_Authentication", Model); }
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions">
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary" data-ktwizard-action="action-submit">Save</button>
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/dist/assets/js/pages/custom/tasks/add.js" type="text/javascript"></script>
    <script type="text/javascript">



    </script>
}
