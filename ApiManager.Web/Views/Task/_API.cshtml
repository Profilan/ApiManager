"@model ApiManager.Web.Models.TaskViewModel

<div class="form-group row">
    <div class="col-lg-6">
        @Html.LabelFor(model => model.ApiViewModel.Url)
        @Html.DropDownListFor(x => Model.ApiViewModel.UrlId, new SelectList(Model.ApiViewModel.Urls, "Id", "Name"), "- Select an url -", htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-lg-6">
        @Html.LabelFor(model => model.ApiViewModel.HttpMethod)
        @Html.EnumDropDownListFor(model => model.ApiViewModel.HttpMethod, "Select method", new { @class = "form-control" })
    </div>
</div>

<div class="form-group row">
    <div class="col-lg-8">
        @Html.LabelFor(model => model.ApiViewModel.Headers)
        <div id="HeaderRepeater" class="kt-repeater">
            <div data-repeater-list="ApiViewModel.Headers">
                @if (Model.ApiViewModel.Headers.Count() > 0)
                {
                    int i = 0;
                    foreach (var header in Model.ApiViewModel.Headers)
                    {
                            <div data-repeater-item class="kt-repeater__item" style="margin-bottom: 15px;">
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="hidden" data-name class="form-control" name="Id" value="@header.Id" />
                                        <input type="text" data-name class="form-control" name="Name" value="@header.Name" placeholder="Header Name" />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" data-name class="form-control" name="Value" value="@header.Value" placeholder="Header Value" />
                                    </div>
                                    <div class="col-md-4">
                                        <button data-repeater-delete="" class="btn btn-danger btn-rm">
                                            <i class="la la-close kt-font-light"></i> Remove
                                        </button>
                                    </div>
                                </div>
                                
                            </div>

                        i++;
                    }

                }
                else
                {
                    <div data-repeater-item class="kt-repeater__item" style="margin-bottom: 15px;">
                        <div class="row">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="Name" placeholder="Header Name">
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="Value" placeholder="Header Value">
                            </div>
                            <div class="col-md-4">
                                <button data-repeater-delete="" class="btn btn-danger btn-sm">
                                    <i class="la la-close kt-font-light"></i> Remove
                                </button>
                            </div>
                        </div>
                        
                    </div>

                }
            </div>
            <hr />
            <div class="kt-repeater__add-data">
                <span data-repeater-create="" class="btn btn-info btn-sm">
                    <i class="la la-plus"></i> Add
                </span>
            </div>
        </div>
    </div>
</div>

