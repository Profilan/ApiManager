@model ApiManager.Web.Models.TaskViewModel

    <div class="form-group row">

        <div class="col-lg-6">
            @Html.LabelFor(model => model.FTPViewModel.FtpSyncMethod)
            @Html.EnumDropDownListFor(model => model.FTPViewModel.FtpSyncMethod, "Select method", new { @class = "form-control" })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(model => model.FTPViewModel.FtpConnectionType)
            @Html.EnumDropDownListFor(model => model.FTPViewModel.FtpConnectionType, "Select type", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        
        <div class="col-lg-4">
            @Html.LabelFor(model  => model.FTPViewModel.FTPServerAddress)
            @Html.EditorFor(model => model.FTPViewModel.FTPServerAddress, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-lg-2">
            @Html.LabelFor(model => model.FTPViewModel.FtpPort)
            @Html.EditorFor(model => model.FTPViewModel.FtpPort, new { htmlAttributes = new { @Value = "22", @class = "form-control", @type = "text" } })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-lg-6">
            @Html.LabelFor(model => model.FTPViewModel.FtpLocalFolder)
            @Html.EditorFor(model => model.FTPViewModel.FtpLocalFolder, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-lg-6">
            @Html.LabelFor(model => model.FTPViewModel.FtpRemoteFolder)
            @Html.EditorFor(model => model.FTPViewModel.FtpRemoteFolder, new { htmlAttributes = new { @Value = "/", @class = "form-control" } })
        </div>
    </div>
