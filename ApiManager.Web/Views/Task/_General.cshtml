@model ApiManager.Web.Models.TaskViewModel


<div class="form-group row">
    <div class="col-lg-6">
        @Html.LabelFor(model => model.TaskType)
        @Html.EnumDropDownListFor(model => model.TaskType, "Select type", new { @class = "form-control" })
    </div>
    <div class="col-lg-6">
        @Html.LabelFor(model => model.Classname)
        @Html.EditorFor(model => model.Classname, new { htmlAttributes = new { @class = "form-control" } })
