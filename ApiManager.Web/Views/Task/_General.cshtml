</div>

<div class="form-group row">
    <div class="col-lg-6">
        @Html.LabelFor(model => model.SPLogger)
        @Html.EditorFor(model => model.SPLogger, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="form-group row">
