@model ApiManager.Web.Models.TaskViewModel

<div class="form-group row">
    <div class="col-lg-6">
        @Html.LabelFor(model => model.ReceiverViewModel.FileViewModel.Formats)
        @Html.ListBoxFor(model => model.ReceiverViewModel.FileViewModel.SelectedFormats, Model.FileViewModel.Formats, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label>Shares</label>
    <div class="kt-checkbox-list">
        @foreach (var share in Model.ReceiverViewModel.FileViewModel.Shares)
        {
            var selected = "";
            if (Model.ReceiverViewModel.FileViewModel.SelectedShares.Contains(share.Id))
            {
                selected = "checked";
            }
            <label class="kt-checkbox">
                <input type="checkbox" id="ReceiverViewModel_FileViewModel_SelectedShares" name="ReceiverViewModel.FileViewModel.SelectedShares" value="@share.Id" @selected>
                @share.Name
                <span></span>
            </label>

        }
    </div>
</div>
