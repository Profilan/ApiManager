
@{
    ViewBag.Title = "Users";

    var roleList = new SelectList(new List<SelectListItem>()
    {
        new SelectListItem { Selected = true, Text = "Guest", Value = "guest" },
        new SelectListItem { Selected = false, Text = "Customer", Value = "customer" },
        new SelectListItem { Selected = false, Text = "Admin", Value = "admin" },
    }, "Value", "Text");
}

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Users
                <small>show list of API users</small>
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <a href="#" class="btn btn-brand btn-bold btn-upper btn-font-sm">
                    <i class="la la-plus"></i>
                    New User
                </a>
            </div>
        </div>
    </div>
    <div class="kt-portlet__body">

        <!--begin: Search Form -->
        <div class="kt-form kt-fork--label-right kt-margin-t-20 kt-margin-b-10">
            <div class="row align-items-center">
                <div class="col-xl-8 order-2 order-xl-1">
                    <div class="row align-items-center">
                        <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-input-icon kt-input-icon--left">
                                <input type="text" class="form-control" placeholder="Search..." id="generalSearch">
                                <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                    <span><i class="la la-search"></i></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                            <div class="kt-form__group kt-form__group--inline">
                                <div class="kt-form__label">
                                    <label>Role:</label>
                                </div>
                                <div class="kt-form__control">
                                    @Html.DropDownList("Role", roleList, new { @class = "form-control bootstrap-select", @id = "kt_form_role"  })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 order-1 order-xl-2 kt-align-right">
                    <a href="/user/create" class="btn btn-default kt-hidden">
                        <i class="la la-cart-plus"></i> New User
                    </a>
                    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg d-xl-none"></div>
                </div>
            </div>
        </div>

        <!--end: Search Form -->
    </div>
    <div class="kt-portlet__body kt-portlet__body--fit">

        <!--begin: Datatable -->
        <div class="kt_datatable" id="kt_apps_user_list_datatable"></div>

        <!--end: Datatable -->
    </div>
</div>


@section scripts
{
    <script src="~/dist/assets/js/pages/custom/users/list-datatable.js" type="text/javascript"></script>
}